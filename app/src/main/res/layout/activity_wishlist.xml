<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="800dp">

        <ImageView
            android:layout_width="390dp"
            android:layout_height="300dp"
            android:src="@drawable/about2"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
            <ImageView
                android:layout_width="390dp"
                android:layout_height="300dp"
                android:layout_marginTop="210dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/about1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#80FFFFFF" />

        <ImageView
            android:id="@+id/iv_header_logo"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/luxx_logo_blacktext"
            android:contentDescription="Luxx Haven Logo" />
        </FrameLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="ABOUT LUXX HAVEN"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Welcome to our uniquely curated Airbnb units in the heart of Quezon City — thoughtfully designed to provide more than just a place to sleep, but a space to truly feel at home. Whether you're seeking a serene retreat or a fun-filled escape, we’ve created two distinct stays to match your vibe. Our Pinterest Unit offers a minimalist, cozy atmosphere perfect for quiet moments, intimate dinners, and restful nights, while our Mid-Century Unit brings vibrant energy and retro charm for guests who want to unwind in style and enjoy a playful, memorable staycation."
            android:textColor="#000000"
            android:justificationMode="inter_word"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="At the Pinterest Unit, you’ll find a calming space with soft touches, natural light, and simple yet stylish furnishings — perfect for solo travelers, couples, or anyone looking to disconnect and recharge. Enjoy home-cooked meals in the well-equipped kitchenette, or spend quality time with friends and loved ones over videoke and classic board games. It’s a peaceful little corner of the city where you can slow down, breathe, and feel instantly at ease."
            android:textColor="#000000"
            android:justificationMode="inter_word"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"
            android:text="Meanwhile, the Mid-Century Unit is all about bold colors, funky details, and modern convenience. Ideal for couples, barkadas, or solo adventurers, it comes with access to a pool and gym, a PS4 for fun game nights, and a full kitchen setup for when you're feeling culinary. Every corner is designed to be as Instagram-worthy as it is comfortable, making it the perfect setting for staycations, celebrations, or simply a stylish break from the ordinary. Whichever unit you choose, we’re here to offer you a warm, hassle-free, and unforgettable stay in the heart of QC"
            android:textColor="#000000"
            android:justificationMode="inter_word"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_box"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/aboutText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:text="WE HELP WITH"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIT BOOKING"
                   android:layout_margin="20dp"
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                   android:padding="20dp"
                    android:text="We’re here to make your stay as smooth and special as possible, starting from the moment you inquire.

We personally assist with the booking process whether through website or direct reservations by promptly answering your questions, providing clear check-in instructions, and offering flexible arrangements when possible."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:justificationMode="inter_word"
                    />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SURPRISE DECOR"
                    android:layout_margin="20dp"
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:padding="20dp"
                    android:text="We offer customizable surprise decor packages perfect for birthdays, anniversaries, proposals, or any celebration you’d like to make extra memorable. From romantic setups with balloons and candles to fun party themes, we’re happy to prepare the unit before your arrival so you walk into a space that’s both beautiful and uniquely yours."
                      android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    />

            </FrameLayout>



</LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            >
